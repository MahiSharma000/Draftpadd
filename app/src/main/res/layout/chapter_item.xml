<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="chapter"
            type="com.example.draftpad.network.Chapter" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#F1EAEA"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:contentPadding="8dp"
        app:strokeColor="@android:color/background_light"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtChapterNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="123dp"
                android:layout_marginEnd="122dp"
                android:fontFamily="@font/akaya_telivigala"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Chapter Number"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtChapterTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/akaya_telivigala"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Chapter Title"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/txtChapterNo"
                app:layout_constraintStart_toStartOf="@+id/txtChapterNo"
                app:layout_constraintTop_toBottomOf="@+id/txtChapterNo"
                app:text="@{chapter.title}" />

            <TextView
                android:id="@+id/txtCom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55dp"
                android:layout_marginEnd="64dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/baseline_comment"
                android:fontFamily="@font/akaya_telivigala"
                android:padding="5dp"
                android:text="Comments"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txtLikes"
                app:layout_constraintTop_toBottomOf="@+id/txtChapterTitle"
                app:text="@{String.valueOf(chapter.total_comments)}" />

            <TextView
                android:id="@+id/txtLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/baseline_like"
                android:fontFamily="@font/akaya_telivigala"
                android:padding="5dp"
                android:text="Likes"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/txtCom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtChapterTitle"
                app:text="@{String.valueOf(chapter.total_likes)}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>