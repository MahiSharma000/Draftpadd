<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="book"
            type="com.example.draftpad.network.Book" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:strokeColor="@android:color/background_light"
        app:strokeWidth="1dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBookCover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="123dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="122dp"
                android:layout_marginBottom="13dp"
                android:src="@drawable/cover"
                app:layout_constraintBottom_toTopOf="@+id/txtTitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="8dp"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintBottom_toTopOf="@+id/txtAuthor"
                app:layout_constraintEnd_toEndOf="@+id/imgBookCover"
                app:layout_constraintStart_toStartOf="@+id/imgBookCover"
                app:text="@{book.title}"
                tools:text="@string/book_title" />

            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:padding="8dp"
                android:textColor="?android:textColorSecondary"
                app:layout_constraintEnd_toEndOf="@+id/txtTitle"
                app:layout_constraintStart_toStartOf="@+id/txtTitle"
                app:layout_constraintTop_toBottomOf="@+id/txtTitle"
                app:text="@{book.username}"
                tools:text="@string/author" />

            <TextView
                android:id="@+id/txtDescripton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="152dp"
                android:layout_marginEnd="134dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/aclonica"
                android:padding="8dp"
                android:textColor="?android:textColorSecondary"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAuthor"
                app:summary_text="@{book.description}"
                tools:text="@string/book_description" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>