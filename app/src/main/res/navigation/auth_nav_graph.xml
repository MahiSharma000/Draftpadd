<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.draftpad.auth.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_phoneLoginFragment"
            app:destination="@id/phoneLoginFragment" />
        <action
            android:id="@+id/action_authFragment_to_googleFragment"
            app:destination="@id/googleFragment" />
        <action
            android:id="@+id/action_authFragment_to_EPLoginFragment"
            app:destination="@id/EPLoginFragment" />
    </fragment>
    <fragment
        android:id="@+id/EPLoginFragment"
        android:name="com.example.draftpad.auth.EPLoginFragment"
        android:label="fragment_e_p_login"
        tools:layout="@layout/fragment_e_p_login" />
    <fragment
        android:id="@+id/googleFragment"
        android:name="com.example.draftpad.auth.GoogleFragment"
        android:label="fragment_google"
        tools:layout="@layout/fragment_google" />
    <fragment
        android:id="@+id/phoneLoginFragment"
        android:name="com.example.draftpad.auth.PhoneLoginFragment"
        android:label="fragment_phone_login"
        tools:layout="@layout/fragment_phone_login" />
</navigation>